{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Strict Type Checking - TODO: Enable after fixing legacy code */
    "strict": false,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false

    /* NOTE: New ForceGraph component is strict-mode compliant
     * Enable strict mode after refactoring legacy Graph, services, and utils
     */
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}